rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read, only reed.klaeser@gmail.com can write to codinginterview-quiz-attempts
    match /codinginterview-quiz-attempts/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'reed.klaeser@gmail.com';
    }

    // Allow public read, only reed.klaeser@gmail.com can write to codinginterview-code-quiz-attempts
    match /codinginterview-code-quiz-attempts/{document=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'reed.klaeser@gmail.com';
    }

    // Allow public read, temporarily allow writes for seeding
    match /codinginterview-problems/{document=**} {
      allow read: if true;
      allow write: if true; // TODO: Lock this down after seeding
    }

    // By default, deny all access
    // Authentication is handled server-side via Firebase Admin SDK
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
